pipeline {

    agent any

    tools {
        go '1.16.6'
    }

    stages {

        stage ('Checkout source') {

            steps{
                echo "Validating Go version"
                sh "go version"
                // git 'https://github.com/limacharlie2me/jenkins-integration.git'
            }
        }

        stage ('Build image') {
            steps {
                echo "Building app"
                sh 'go build main.go'
                echo "Build complete"
            }
        }
    }
}